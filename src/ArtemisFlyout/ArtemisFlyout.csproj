<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Folder Include="Models\" />
    <AvaloniaResource Include="Assets\**" />
    <AvaloniaXaml Remove="Win\**" />
    <Compile Remove="Win\**" />
    <EmbeddedResource Remove="Win\**" />
    <None Remove="Win\**" />
    <AvaloniaResource Remove="Assets\bow-black.ico" />
    <AvaloniaResource Remove="Assets\bow-white.ico" />
    <AvaloniaResource Remove="Assets\bow.ico" />
    <None Remove=".gitignore" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Assets\bow-black.ico" />
    <EmbeddedResource Include="Assets\bow-white.ico" />
    <EmbeddedResource Include="Assets\bow.ico" />
  </ItemGroup>
  <PropertyGroup>
    <PublishReadyToRun>true</PublishReadyToRun>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.10" />
    <PackageReference Include="Avalonia.Desktop" Version="0.10.10" />
    <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="0.10.10" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.10" />
    <PackageReference Include="Avalonia.Skia" Version="0.10.10" />
    <PackageReference Include="FluentAvaloniaUI" Version="1.1.5" />
    <PackageReference Include="Material.Icons.Avalonia" Version="1.0.2" />
    <PackageReference Include="MessageBox.Avalonia" Version="1.5.5" />
    <PackageReference Include="RestSharp" Version="106.12.0" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="UserControls\ArtemisControl.axaml.cs">
      <DependentUpon>ArtemisControl.axaml</DependentUpon>
    </Compile>
    <Compile Update="UserControls\ArtemisLauncher.axaml.cs">
      <DependentUpon>ArtemisLauncher.axaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
